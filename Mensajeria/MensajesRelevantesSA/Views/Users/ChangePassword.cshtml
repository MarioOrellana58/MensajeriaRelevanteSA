
@{
	ViewBag.Title = "ChangePassword";
}

<h2>ChangePassword</h2>
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<p align="center">Ingrese su nombre de usuario</p>
				<p align="center"><input type="text" name="userName" style="visibility:visible" /></p>
			</div>
			<div class="col-md-offset-2 col-md-10">
				<p align="center">Ingrese su contraseña</p>
				<p align="center"><input type="text" name="userPassword" style="visibility:visible" /></p>
			</div>
			<div class="col-md-offset-2 col-md-10">
				<p align="center"><input type="submit" value="Crear usuario" class="btn btn-default" /></p>
			</div>
		</div>
	</div>
	<p>@Html.ActionLink("Regresar al logIn", "LogInUser", "Users", new { area = "" }, new { @class = "navbar-brand", @style = "width:240px; text-align:center" })</p>
}
